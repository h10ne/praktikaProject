<Window x:Class="PrakrikaUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrakrikaUpdate"        
        xmlns:vm="clr-namespace:Praktika"
        mc:Ignorable="d"
        Title="Интерфейс работы с БД" Height="506.285" Width="551.475">
    <Window.DataContext>
        <vm:DbCloneTables/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TabControl HorizontalAlignment="Left" Height="475" VerticalAlignment="Top" Width="543">

            <TabItem Header="Страна">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Background="AliceBlue" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Width="543">
                        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Countries}" x:Name="CountryGrid" HorizontalAlignment="Left" Height="382" Margin="0,0,0,10" VerticalAlignment="Top"  SelectedItem="{Binding SelectedCountry}" Width="543" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Полное имя" Binding="{Binding FullName}"/>
                                <DataGridTextColumn Header="Краткое имя" Binding="{Binding ShortName}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Height="42" Margin="10,0" >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding AddCountry}" Content="Добавить" Height="30" Width="90" Grid.Column="0"/>
                            <Button Content="Изменить" Command="{Binding ChangeCountry}" Height="30" Width="90"  Grid.Column="1"/>
                            <Button Content="Удалить" Command="{Binding DeleteCountry}" Height="30" Width="90" Grid.Column="2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Регион">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Background="AliceBlue" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Width="543">
                        <DataGrid AutoGenerateColumns="False" SelectedItem="{Binding SelectedRegion}" ItemsSource="{Binding Regions}" x:Name="RegionGrid" HorizontalAlignment="Left" Height="382" Margin="0,0,0,10" VerticalAlignment="Top" Width="543" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Название региона" Binding="{Binding NameRegion}"/>
                                <DataGridTextColumn Header="Страна" Binding="{Binding Country}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Height="42" Margin="10,0" >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding AddRegion}" Content="Добавить" Height="30" Width="90" Grid.Column="0"/>
                            <Button Content="Изменить" Command="{Binding ChangeRegion}" Height="30" Width="90"  Grid.Column="1"/>
                            <Button Content="Удалить" Command="{Binding DeleteRegion}" Height="30" Width="90" Grid.Column="2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Город">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Background="AliceBlue" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Width="543">
                        <DataGrid AutoGenerateColumns="False" SelectedItem="{Binding SelectedCity}" ItemsSource="{Binding Cities}" x:Name="CityGrid" HorizontalAlignment="Left" Height="382" Margin="0,0,0,10" VerticalAlignment="Top" Width="543" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Название города" Binding="{Binding NameCity}"/>
                                <DataGridTextColumn Header="Регоин" Binding="{Binding Region}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Height="42" Margin="10,0" >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding AddCity}" Content="Добавить" Height="30" Width="90" Grid.Column="0"/>
                            <Button Content="Изменить" Command="{Binding ChangeCity}" Height="30" Width="90"  Grid.Column="1"/>
                            <Button Content="Удалить" Command="{Binding DeleteCity}" Height="30" Width="90" Grid.Column="2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Клиент">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Background="AliceBlue" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Width="543">
                        <DataGrid AutoGenerateColumns="False" SelectedItem="{Binding SelectedAddress}" ItemsSource="{Binding Addresses}" x:Name="AddressGrid" HorizontalAlignment="Left" Height="382" Margin="0,0,0,10" VerticalAlignment="Top" Width="543" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding Person}"/>
                                <DataGridTextColumn Header="Город" Binding="{Binding City}"/>
                                <DataGridTextColumn Header="Улица" Binding="{Binding Street}"/>
                                <DataGridTextColumn Header="Номер здания" Binding="{Binding Building}"/>
                                <DataGridTextColumn Header="Номер офиса" Binding="{Binding Office}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Height="42" Margin="10,0" >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding AddAddress}" Content="Добавить" Height="30" Width="90" Grid.Column="0"/>
                            <Button Content="Изменить" Command="{Binding ChangeAddress}" Height="30" Width="90"  Grid.Column="1"/>
                            <Button Content="Удалить" Command="{Binding DeleteAddress}" Height="30" Width="90" Grid.Column="2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
