<Window x:Class="PrakrikaUpdate.View.WindowNewRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить регион" Height="284.741" Width="368">
    <Grid Margin="0,0,2,-1">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Название региона" FontSize="20" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="41" Margin="10,42,0,0" TextWrapping="Wrap" Text="{Binding NameRegion}" FontSize="20" VerticalAlignment="Top" Width="340"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,103,0,0" TextWrapping="Wrap" Text="Краткое название страны" FontSize="20" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="41" Margin="10,135,0,-3" TextWrapping="Wrap" Text="{Binding Country.ShortName}" FontSize="20" VerticalAlignment="Top" Width="340"/>
        <Button Content="Принять" FontSize="22" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click" Height="37"/>
        <Button Content="Отмена"  FontSize="22" HorizontalAlignment="Left" Margin="240,197,0,0" VerticalAlignment="Top" Width="110" IsCancel="True" Height="37"/>

    </Grid>
</Window>
