<Window x:Class="PrakrikaUpdate.WindowNewCountry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrakrikaUpdate"
        mc:Ignorable="d"
        Title="Новая страна" Height="203.35" Width="168.502">
    <Grid Margin="0,0,415,0">
        <TextBlock HorizontalAlignment="Left" Margin="8,16,-156,0" TextWrapping="Wrap" Text="Полное название страны" VerticalAlignment="Top" Width="148"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding FullName}" Height="23" Name="Fullname" Margin="8,37,-115,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107"/>
        <TextBlock HorizontalAlignment="Left" Margin="8,74,-156,0" TextWrapping="Wrap" Text="Краткое название страны" VerticalAlignment="Top" Width="148"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding ShortName}" Height="23" Margin="8,95,-115,0" Name="ShortName" TextWrapping="Wrap"  VerticalAlignment="Top" Width="107"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="7,138,-71,0" VerticalAlignment="Top" Width="64" Click="Button_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="86,138,-144,0" VerticalAlignment="Top" Width="58" IsCancel="True"/>

    </Grid>
</Window>
